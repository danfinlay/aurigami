<div class="hero-unit">
  <form id="post-form" class="form-horizontal" action="/posts" method="POST">
    <fieldset>
      <legend>Create a new Post</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {post: params}) %>

      <div class="form-actions">

        <h2 class="id">Message from <%= parent.authorName %></h2>

        <section>
          <button onclick="toggleRecording()">Record</button>
          <script src="http://cdn.binaryjs.com/0/binary.js"></script>
          <script src="/js/core/recorder.js"></script>
        </section>

        <%- contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
  </form>
</div>

